.Checkbox
  &__field
    position absolute
    opacity 0
    font-size 0
    line-height 0
    width 100%
    height 100%
    z-index 2
    cursor pointer
  &__label
    width 60px
    height 30px
    background-color $orange
    border-radius vw(60)
    position relative
    display block
    cursor pointer
    @media $large
      width vw(60)
      height vw(32)
  &__control
    width 26px
    height 26px
    position absolute
    background-color #fff
    border-radius 100%
    top 2px
    left 2px
    z-index 1
    will-change transform 
    transition transform 200ms ease
    @media $large
      top vw(2)
      left vw(2)
      width vw(28)
      height vw(28)

.Checkbox__field:checked+.Checkbox__control
  transform translate3d(30px, 0, 0)
  @media $large
    transform translate3d(2.0497803807vw, 0, 0)