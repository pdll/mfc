.Lot
  display inline-block
  width 100%
  padding 30px 0
  box-sizing border-box
  will-change color
  transition color 160ms ease
  @media $medium
    width 33.33%
    padding 30px 20px
  @media $large
    padding vw(30) vw(25)
  +Tap()
    color $orange
  ._light &
    +Tap()
      color $black
  &_special
    color $white
    +Tap()
      color $black
  &_single
    display block
    width 100%
  &__inner
    padding-bottom 100%
    position relative
  &__img
    display block
    width 100%
    position absolute
    bottom 0
  &__time
    position absolute
    left 0
    top vw(25)
    z-index 2
  &__name
    position absolute
    bottom 35px
    left 0
    z-index 2
    @media $large
      bottom vw(35)
  &__price
    position absolute
    bottom 0
    z-index 2
  &__gradient
    position absolute
    z-index 1
    bottom 0
    left 0
    right 0
    height 150px
    background-color transparent
    background linear-gradient(to top, $white 0%, alpha($white, 60%) 60%, alpha($white, 0%) 100%)
    @media $large
      height vw(200)
    .Lot_special &,
    ._light &
      background linear-gradient(to top, $orange 0%, alpha($orange, 60%) 60%, alpha($orange, 0%) 100%)